<link rel="stylesheet" href="css/recent_articles.css">
<h1 id="recent">Recent Articles on MeraBlog</h1>
<div class="recent-articles-container">
  <% blogs.each_with_index do |blog, index| %>
    <div class="card">
      <h2 class="article-title" data-index="<%= index %>">
        <a href="/update?blog_id=<%= blog['_id'] %>">
          <%= "#{index + 1}. #{blog['title']}" %>
        </a>
      </h2>
     
    </div>
  <% end %>
</div>
