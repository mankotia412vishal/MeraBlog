<h1 id="recent">Recent Articles on MeraBlog</h1>
<div class="recent-articles-container">

  <% blogs.each_with_index do |blog, index| %>
    <div class="card">
      <h2 class="article-title" data-index="<%= index %>"><%= "#{index + 1}. #{blog['title']}" %></h2>
      <div class="article-content" data-index="<%= index %>">
        <p><%= blog['content'] %></p>
      </div>
    </div>
  <% end %>
</div>
