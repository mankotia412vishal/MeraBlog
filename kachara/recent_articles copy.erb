<link rel="stylesheet" href="css/recent_articles.css">

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
  $(document).ready(function() {
    $('.article-title').click(function() {
      const index = $(this).data('index');
      $('.article-content').removeClass('active');
      $('.article-content[data-index="' + index + '"]').addClass('active');
    });
  });
</script>

<style>
.article-title {
  color: blue;
  cursor: pointer;
  margin-bottom: 5px;
}

.article-content {
  display: none;
}

.article-content.active {
  display: block;
}
</style>
