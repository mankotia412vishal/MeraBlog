<link rel="stylesheet" href="css/view_article.css">

<div class="form-container">
  <div class="form">
    <% if @blog %>
      <h1 class="blog-title"><%= @blog['title'] %></h1> <!-- Display the blog title -->
      <p class="blog-content"><%= @blog['content'] %></p> <!-- Display the blog content -->
    <% else %>
      <p>Blog not found.</p>
    <% end %>
    <button onclick="navigateTo('/recent_articles')">Recent Articles</button>
  </div>
</div>

<script>
function navigateTo(url) {
  window.location.href = url;
}
</script>
